<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!--登录操作-->
	<package name="wlogin" extends="struts-default">
		<action name="index" class="wwwEntry" method="index">
			<result name="success" >/www/stuInfo/index.jsp</result>
			<result name="failure" >/login.jsp</result>
		</action>
		<action name="list" class="wwwEntry" method="list">
			<result name="success" >/www/stuInfo/list.jsp</result>
			<result name="failure" >/login.jsp</result>
		</action>
		
		<action name="wlogin" class="webSiteLoginAction" method="login">
			<result name="success" >/www/stuInfo/s_center.jsp</result>
			<result name="failure" >/login.jsp</result>
		</action>
		<action name="reLogin" class="webSiteLoginAction" method="reLogin">
			<result name="success" >/login.jsp</result>
			<result name="failure" >/www/stuInfo/stu_failure.jsp
			</result>
		</action>	
		<action name="entryStuInfo" class="wwwUsersAction" method="entry">
			<result name="success" >/www/stuInfo/stuInfo.jsp</result>
			<result name="failure" >/login.jsp</result>
		</action>
		<action name="entryAccount" class="wwwUsersAction" method="accountentry">
			<result name="success" >/www/stuInfo/stu_account.jsp</result>
			<result name="failure" >/login.jsp</result>
		</action>
		
		<action name="userEdit" class="wwwUsersAction" method="userEdit">
			<result name="success" >/www/stuInfo/stu_success.jsp
			</result>
			<result name="failure" >/www/stuInfo/stu_failure.jsp
			</result>
		</action>
		<action name="upwpwd" class="wwwUsersAction" method="upwpwd">
			<result name="success" >/www/stuInfo/stu_success.jsp
			</result>
			<result name="failure" >/www/stuInfo/stu_failure.jsp
			</result>
		</action>
		<action name="regUser" class="wwwUsersAction" method="add">
			<result name="success" >/www/stuInfo/reg2.jsp
			</result>
			<result name="failure" >/www/stuInfo/stu_failure.jsp
			</result>
		</action>
		<action name="player" class="playerAction" method="getMovie">
			<result name="success" >/www/stuInfo/player.jsp
			</result>
			<result name="failure" >/www/stuInfo/failure.jsp
			</result>
		</action>
		
	</package>
</struts>    
