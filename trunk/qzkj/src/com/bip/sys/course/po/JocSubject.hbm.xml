<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.bip.sys.course.po.JocSubject" table="joc_subject" catalog="db_movie">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="java.lang.String">
            <column name="name" length="100" not-null="true">
                <comment>科目名称</comment>
            </column>
        </property>
        <property name="cost" type="java.lang.Integer">
            <column name="cost">
                <comment>科目花费</comment>
            </column>
        </property>
        <property name="titleimage" type="java.lang.String">
            <column name="titleimage" length="100">
                <comment>科目标题图</comment>
            </column>
        </property>
        <property name="discription" type="java.lang.String">
            <column name="discription" length="200">
                <comment>科目描述</comment>
            </column>
        </property>
        <!-- 
        <set name="courses" inverse="true">
            <key>
                <column name="subject_id" not-null="true">
                    <comment>所属科目</comment>
                </column>
            </key>
            <one-to-many class="po.JocCourse" />
        </set>
         -->
    </class>
</hibernate-mapping>
