<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.bip.sys.course.po.JocCourse" table="www_course">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity"></generator>
        </id>
        <property name="code" type="java.lang.String">
            <column name="code" length="20" not-null="true">
                <comment>编号</comment>
            </column>
        </property>
        <property name="subjectCode" type="java.lang.String">
            <column name="subject_code" length="20" not-null="true">
                <comment>所属科目</comment>
            </column>
        </property>
        <property name="video1" type="java.lang.String">
            <column name="video1" length="36">
                <comment>流畅视频</comment>
            </column>
        </property>
        <property name="video3" type="java.lang.String">
            <column name="video3" length="36">
                <comment>高清视频</comment>
            </column>
        </property>
        <property name="video2" type="java.lang.String">
            <column name="video2" length="36">
                <comment>普清视频</comment>
            </column>
        </property>
        <property name="name" type="java.lang.String">
            <column name="name" length="100" not-null="true">
                <comment>课程名称</comment>
            </column>
        </property>
        <property name="cost" type="java.lang.Integer">
            <column name="cost">
                <comment>课程花费</comment>
            </column>
        </property>
        <property name="titleimage" type="java.lang.String">
            <column name="titleimage" length="100">
                <comment>课程标题图</comment>
            </column>
        </property>
        <property name="discription" type="java.lang.String">
            <column name="discription" length="200">
                <comment>描述</comment>
            </column>
        </property>
        <property name="subjectName" type="java.lang.String"
             formula="(select t.name from www_subject t where t.code=subject_code )" >
        </property>
    </class>
</hibernate-mapping>
