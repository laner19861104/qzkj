<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>

<link href="css/main.css" rel="stylesheet" type="text/css" />
<script src="js/tdcolor.js" type="text/javascript"></script>
<script src="js/upview.js" type="text/javascript"></script>
<script src="js/util.js" type="text/javascript"></script>
<script language="javascript">
function edit() {
	if(document.listForm.password.value==""||!descCheck(document.listForm.password.value))
	{
	    alert("密码输入错误,密码为空或含有非法字符！");
		return;
	}
	if(document.listForm.password2.value==""||!descCheck(document.listForm.password2.value))
	{
	    alert("确认密码输入错误,密码为空或含有非法字符！");
		return;
	}
	if(document.listForm.password.value==document.listForm.password2.value)
	{
	  /*修改*/
	document.listForm.action="uppwd.action";
    document.listForm.submit();
	}
	else
	{
	    alert("输入密码不一致,请重新输入！");
		return;
	}
	
};
</script>
</head>

<body>
	<div class="position">当前位置：系统管理 >> 用户密码修改</div>
	
    <br />
    <div align="center">
	<form name="listForm" action="../zcxgov/uppwd.action" method="post" >
    <table width="440" border="0" cellpadding="0" cellspacing="0" class="tableout">
      <tr>
        <td><fieldset>
          <legend>用户信息</legend>
          <table width="100%" border="0" cellpadding="0" cellspacing="0" class="list">
            <tr>
              <th>登录名：
</th>
              <td><input name="username" type="text" value="$!username" class="input_text" size="36" maxlength="20" readonly="true" />
               (<font class="hong">*</font>)</td>
            </tr>
            <tr>
              <th>原密码：
</th>
              <td><input name="oldpassword" type="password" class="input_text" size="41" maxlength="20" />
               (<font class="hong">*</font>)</td>
            </tr>            
            <tr>
              <th>密&nbsp;&nbsp;码：
</th>
              <td><input name="password" type="password" class="input_text" size="41" maxlength="20" />
               (<font class="hong">*</font>)</td>
            </tr>
            <tr>
              <th>确&nbsp;&nbsp;认：
</th>
              <td><input name="password2" type="password" class="input_text" size="41"  maxlength="20"/>
                (<font class="hong">*</font>)</td>
            </tr>
          </table>
        </fieldset></td>
      </tr>
    </table>
	
    <table width="405" border="0" cellpadding="0" cellspacing="0">
	  <tr>
        <td width="405"  align="center"><font color="#FF0000"><b>$!message &nbsp;</b></font></td>
      </tr>
      <tr>
        <td width="405"  align="center">
		<table align="center">
		<tr>
		<td>
		<a class="btn" onClick="javascript:edit();" >确 定</a> <a class="btn" onclick="history.back(-2);">取 消</a>
		</td>
		</tr>
		</table>
		<div class="line"></div>
		 </td>
      </tr>
    </table>
	
    <br />
    <br />
</form>
</div>
</body>
</html>
