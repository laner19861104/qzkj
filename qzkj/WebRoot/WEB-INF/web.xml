<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 <!-- 用来定位Spring XML文件的上下文配置 -->
 <context-param>
  <param-name>contextConfigLocation</param-name>
  <param-value>/WEB-INF/conf/applicationContext*.xml,/WEB-INF/conf/applicationContext-*.xml,/WEB-INF/xfire-servlet.xml</param-value>
 </context-param>
 <!--End-->
 <filter>
  <filter-name>permissionFilter</filter-name>
  <filter-class>com.bip.common.util.PermissionFilter</filter-class>
  <init-param>
   <param-name>directUrl</param-name>
   <param-value>/alentry.action,/adminLogin.action,/ulentry.action,/entloginentry.action,/entlogin.action,/VerifyCodeServlet.action</param-value>
  </init-param>
 </filter>
  <filter-mapping>
  <filter-name>permissionFilter</filter-name>
  <url-pattern>*.action</url-pattern>
 </filter-mapping>
 <filter>
  <filter-name>struts2</filter-name>
  <filter-class>com.bip.common.filter.AgentStrutsPrepareAndExecuteFilter</filter-class>
 </filter>
 <!-- 网站过滤 -->
 <filter>
  <filter-name>webSiteFilter</filter-name>
  <filter-class>com.bip.common.util.WebSiteFilter</filter-class>
 </filter>
 <filter-mapping>
  <filter-name>webSiteFilter</filter-name>
  <url-pattern>*.do</url-pattern>
 </filter-mapping>
 <!--<filter-mapping>
  <filter-name>struts2</filter-name>
  <url-pattern>/*</url-pattern>
 </filter-mapping> --> 
 <!--添加spring Listener-->
 <listener>
  <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
 </listener>
 <servlet>
  <servlet-name>velocitylayout</servlet-name>
  <servlet-class>org.apache.velocity.tools.view.servlet.VelocityViewServlet</servlet-class>
 </servlet>
 <!--End
 begin XFire 配置 -->
 <servlet>
  <servlet-name>xfire</servlet-name>
  <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
 </servlet>
 <servlet>
  <!-- 配合Spring容器中XFire一起工作的Servlet-->
  <servlet-name>xfireServlet</servlet-name>
  <servlet-class>org.codehaus.xfire.spring.XFireSpringServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>velocitylayout</servlet-name>
  <url-pattern>*.vm</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>xfire</servlet-name>
  <url-pattern>*.ws</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>xfireServlet</servlet-name>
  <!-- 在这个URI下开放Web Service服务 -->
  <url-pattern>/service/*</url-pattern>
 </servlet-mapping>
 <mime-mapping>
  <extension>flv</extension>
  <mime-type>application/flv</mime-type>
 </mime-mapping>
 <welcome-file-list>
  <welcome-file>login.vm</welcome-file>
 </welcome-file-list>
 <login-config>
  <auth-method>BASIC</auth-method>
 </login-config>
 <!-- end XFire 配置 -->
</web-app>
